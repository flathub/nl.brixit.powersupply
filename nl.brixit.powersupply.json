{
    "app-id": "nl.brixit.powersupply",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "powersupply",
    "finish-args": [
	"--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "powersupply",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/MartijnBraam/powersupply",
                    "tag": "0.9.0",
                    "x-checker-data": {
                        "type": "rotating-url",
                        "url": "https://gitlab.com/MartijnBraam/powersupply/-/archive/0.9.0/powersupply-0.9.0.tar.gz",
                        "pattern": "https://gitlab.com/MartijnBraam/powersupply/-/archive/([0-9.]+)/powersupply-([0-9.]+).tar.gz"
                    }
                }
            ]
        }
    ]
}
